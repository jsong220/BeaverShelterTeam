<div class="content-picture">
  <p id="notice"><%= notice %></p>
  <% if @animal_profile.images.attached? %>
        <section class="container">
  
        <div class="col-md-5 order- order-md-1">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
            <ol class="carousel-indicators">
                <% @animal_profile.images.each_with_index do |image, index| %>
                    <li data-target='#MyCarousel' data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
                <% end %>
            </ol>
          <!--Wrapper for sliders -->
          <div class="carousel-inner" >
              <% @animal_profile.images.each_with_index do |image, index| %>
                      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
                        <%= image_tag (image), class:"id-block w-100"%>
                      </div>
              <% end %>
          </div>
  
          <!-- Left and right controls -->
          <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        </div>
  
        <section>
  <% else %>
    <p class="alert alert-secondary">No images saved for this animal profile</p>
  <% end %>
  </div>
  
  <div class="content" style=" float: left">
  <p></p>
  <p>
    <strong>Name:</strong>
    <%= @animal_profile.name %>
  </p>
  
  <p>
    <strong>Animal Type:</strong>
    <%= @animal_profile.animal_type %>
  </p>
  
  <p>
    <strong>Breed:</strong>
    <%= @animal_profile.breed %>
  </p>
  
  <p>
    <strong>Weight:</strong>
    <%= @animal_profile.weight %>
  </p>
  
  <p>
    <strong>Height:</strong>
    <%= @animal_profile.height %>
  </p>
  
  <p>
    <strong>Color:</strong>
    <%= @animal_profile.color %>
  </p>
  
  <p>
    <strong>Good with animals:</strong>
    <%= @animal_profile.good_with_animals %>
  </p>
  
  <p>
    <strong>Good with children:</strong>
    <%= @animal_profile.good_with_children %>
  </p>
  
  <p>
    <strong>Must be leashed:</strong>
    <%= @animal_profile.must_be_leashed %>
  </p>
  
  <p>
    <strong>Availability:</strong>
    <%= @animal_profile.availability %>
  </p>
  
  <% if shelter_signed_in? && current_shelter.id == @animal_profile.shelter_id %>
  <%= link_to 'Edit', edit_animal_profile_path(@animal_profile) %> |
  <% end %>
  <%= link_to 'Back', animal_profiles_path %>
  </div>
  
  <div class="content-shelter" style="padding-left: 25%">
  <p>
    <p><b>Love at first sight?</b></p>
    <p><b>Here is our contact information:</b></p>
    <p><b>Shelter:</b> <%= @animal_profile.shelter.name %></p>
    <p><b>Street:</b> <%= @animal_profile.shelter.street_address %></p>
    <p><b>City:</b> <%= @animal_profile.shelter.city %></p>
    <p><b>Zip:</b> <%= @animal_profile.shelter.zip_code %></p>
    <p><b>State:</b> <%= @animal_profile.shelter.state %></p>
    <p><b>Contact:</b> <%= @animal_profile.shelter.phone_number %></p>
  </p>
  </div>
  