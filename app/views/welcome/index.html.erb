
<div class="container">
    <div class="row">   
    
        <div class="col-lg-12 text-center">
            <h1 class="mt-5">Welcome to Beaver Shelter</h1>
            <p class="lead">Come and browse profiles posted by local animal shelters and find your perfect match here!</p>
            
        </div>
        <p>Recently Adopted:</p>
    </div>
</div>

 
                    


    <section id="gallery">
        <div class="row">
        
            <% @animal_profiles.each do |animal_profile| %>
                        
                <%if animal_profile.availability=="Adopted"%>
                    <div class="card col-lg-3 mb-7 mx-4 my-4">
                        <div id="">
                    
                            <% if animal_profile.images.attached? %>
                                <%= image_tag url_for(animal_profile.images.first), class: "card-img-top"%>
                            <% else %>
                                <%= image_tag ("beaver.png"), class: "card-img-top" %>
                            <% end %> 
                    
                            <p><h6 class='card-title text-center'><%= animal_profile.name %></h6></p>
                        </div>
                    </div>
                <% end %>
                
            <%end%>
        </div>
                    
    
    </section>
        

<div class="found-home">
<h3 class="text-center">  We found our Homes...  <%= image_tag ("pethouse.gif")%> </h3>
</div>