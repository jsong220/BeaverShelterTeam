<%= stylesheet_link_tag 'shelter_instructions.css' %>

<div class="content">
<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email", class:"form-inputs" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class:"login-button"  %>
  </div>
<% end %>

<div class="shared-links">
<%= render "shelters/shared/links" %>
</div>
</div>
